@page
@model ClientApp.Pages.AddEmployeeModel
@{
}
@section Styles{ 
    <style>
        .card-header:hover {
            background-color: aqua !important;
            color: black;
        }

    </style>
}
<div class="row" ng-app="app" ng-controller="AddEmployeeController">
    <div class="col-md-12">

        <div class="card w-50 m-md-auto d-flex justify-content-md-center">
            <div class="card-header bg-success" id="card-headline">
                <h1 class="card-title text-white">Add New Employee</h1>
            </div>
            <div class="card-body">
                <form class="form-horizontal" role="form" name="frmEmployee" novalidate>
                    <input type="hidden" name="Id" id="Id" value="" ng-model="Id" />
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" id="Name" name="Name" placeholder="Name" class="form-control" ng-model="Name" required />
                            <span class="help-block" ng-show="frmEmployee.Name.$touched && frmEmployee.Name.$invalid">Please enter Name.</span>
                        </div>
                    </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" id="Email" name="Email" placeholder="Email" class="form-control" ng-model="Email" required />
                                <span ng-show="frmEmployee.Email.$touched && frmEmployee.Email.$error.required">Please enter Email.</span>
                            </div>

                        </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" id="Address" name="Address" placeholder="Address" class="form-control" ng-model="Address" required />
                            <span ng-show="frmEmployee.Address.$touched && frmEmployee.Address.$error.required">Please enter Address.</span>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" id="Phone" name="Phone" placeholder="Phone" class="form-control" ng-model="Phone" required />
                            <span ng-show="frmEmployee.Phone.$touched && frmEmployee.Phone.$error.required">Please enter Phone.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="button" value="Save" class="btn btn-primary col-sm-offset-3" ng-click="saveRecord()" />
                            <input type="reset" value="Clear" class="btn btn-secondary col-sm-offset-3" ng-click="resetForm()" />
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="card-footer bg-success">

            </div>
        </div>


  
    </div>
</div>
@section Scripts{ 

    <script src="~/Clientjs/Controller/AddEmployee.js"></script>
}